{
  "name": "@blocktrain/contracts",
  "version": "0.9.0",
  "description": "BlockTrain Smart Contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brick-dot-credit/brick-contracts.git"
  },
  "homepage": "https://github.com/brick-dot-credit/brick-contracts",
  "bugs": {
    "url": "https://github.com/brick-dot-credit/brick-contracts/issues"
  },
  "author": "eigendude",
  "license": "GPL-3.0-or-later",
  "files": [
    "contracts",
    "deployments/*/*.json",
    "deployments/*/.chainid",
    "dist/src",
    "export"
  ],
  "keywords": [
    "defi",
    "nft"
  ],
  "scripts": {
    "audit-ci": "audit-ci --config audit-ci.json",
    "build": "pnpm build:depends && pnpm build:solidity && pnpm deploy:development && pnpm build:typescript",
    "build:depends": "bash tools/build-depends.sh",
    "build:solidity": "hardhat compile",
    "build:typescript": "tsc",
    "clean": "rimraf artifacts cache contracts/depends contracts/interfaces deployments/hardhat deployments/localhost dist src/networks/localhost.json node_modules src/abi src/types tools/repos",
    "deploy": "pnpm deploy:development",
    "deploy:base": "hardhat deploy --network base --export src/networks/base.json && ./tools/sort-networks.sh",
    "deploy:development": "hardhat deploy --network hardhat --export src/networks/localhost.json && ./tools/sort-networks.sh",
    "deploy:localhost": "hardhat deploy --network localhost --export src/networks/localhost.json && ./tools/sort-networks.sh",
    "deploy:mainnet": "hardhat deploy --network mainnet --export src/networks/mainnet.json && ./tools/sort-networks.sh",
    "deploy:testnet": "hardhat deploy --network testnet --export src/networks/testnet.json --tags FundDeployer,TestTokens,UniswapV3,LiquidityPools,GameTokens,GamePools,GameDeFi,GameBureaucracy && ./tools/sort-networks.sh",
    "export": "hardhat export-artifacts export/artifacts --hide-sources --including-empty-bytecode --including-no-public-functions",
    "format": "pnpm format:prettier && pnpm format:eslint",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "game:init": "ts-node src/game/init.ts",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:solhint && pnpm lint:slither",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:slither": "slither .",
    "lint:solhint": "solhint 'contracts/src/**/*.sol' 'contracts/test/**/*.sol' --max-warnings 0",
    "package": "pnpm depends && pnpm build && pnpm export",
    "start": "hardhat node",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "audit-ci": "^7.1.0",
    "axios": "1.13.2",
    "base64-sol": "^1.1.0",
    "bignumber.js": "^9.3.1",
    "chai": "^6.2.2",
    "chai-as-promised": "^8.0.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "ethers": "^6.16.0",
    "hardhat": "^2.28.0",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-deploy": "^1.0.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-solidity": "^2.2.1",
    "rimraf": "^6.1.2",
    "solhint": "^6.0.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solmate": "^6.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "resolutions": {
    "axios": "1.13.2"
  }
}
